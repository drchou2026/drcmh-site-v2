---
import MobileMenu from './MobileMenu.jsx';

const menuItems = [
  { label: '關於醫師', href: '/#about' },
  { label: '主治專長', href: '/#expertise' },
  { label: '衛教專欄', href: '/blog' }, // 連結至獨立頁面
  { label: '門診資訊', href: '/#clinic' },
];
---

<header class="fixed top-0 w-full z-40 bg-bg/80 backdrop-blur-md border-b border-white/20 shadow-sm transition-all duration-300">
  <div class="container mx-auto px-6 h-20 flex justify-between items-center">
    
    <!-- Logo 區域 -->
    <a href="/" class="group flex flex-col justify-center">
      <span class="font-serif text-2xl font-bold text-primary tracking-wide leading-none group-hover:text-accent transition-colors">
        Dr. Chou
      </span>
      <span class="text-[0.6rem] font-bold text-accent tracking-[0.2em] uppercase mt-1">
        Urology Clinic
      </span>
    </a>

    <!-- 桌機版選單 (Desktop Nav) -->
    <nav class="hidden md:flex items-center gap-8">
      {menuItems.map(item => (
        <a 
          href={item.href} 
          class="text-sm font-medium text-text hover:text-accent transition-colors relative group py-2"
        >
          {item.label}
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-accent transition-all duration-300 group-hover:w-full"></span>
        </a>
      ))}
      
      <!-- CTA 按鈕 -->
      <a 
        href="/#clinic" 
        class="ml-4 px-6 py-2.5 bg-primary text-white text-sm font-bold rounded-full hover:bg-accent hover:-translate-y-0.5 shadow-md transition-all duration-300"
      >
        預約掛號
      </a>
    </nav>

    <!-- 手機版選單 (Mobile Nav) -->
    <!-- client:media 確保只有在寬度小於 768px (md) 時才載入 React 程式碼，優化效能 -->
    <div class="md:hidden">
      <MobileMenu client:media="(max-width: 768px)" />
    </div>

  </div>
</header>