---
import { List } from 'lucide-react';

interface Props {
  headings: { depth: number; slug: string; text: string }[];
}

const { headings } = Astro.props;

// 過濾只顯示 H2 和 H3
const toc = headings.filter((h) => h.depth === 2 || h.depth === 3);
---

{toc.length > 0 && (
  <nav class="bg-surface rounded-2xl p-6 border border-gray-100 mb-8">

    <ul class="space-y-2 text-sm">
      {toc.map((heading) => (
        <li class={`${heading.depth === 3 ? 'pl-4' : ''}`}>
          <a 
            href={`#${heading.slug}`} 
            class="text-text hover:text-accent transition-colors block py-1 border-l-2 border-transparent hover:border-accent pl-2 -ml-2"
          >
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}