---
import { ArrowRight } from 'lucide-react';
import { getCollection } from 'astro:content';
// 🟢 1. 引入我們剛剛修復完美的 BlogCard 元件
import BlogCard from '../blog/BlogCard.astro';

// 2. 從 'blog' collection 讀取所有文章
const allPosts = await getCollection('blog');

// 3. 排序 (日期新 -> 舊) 並只取前 3 篇
const recentPosts = allPosts
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);
---

<section id="blog-preview" class="py-24 bg-surface relative">
  <div class="container mx-auto px-6">
    
    {/* 標題與查看更多 (Header) */}
    <div class="flex flex-col md:flex-row justify-between items-end mb-12 gap-4">
      <div class="text-center md:text-left w-full md:w-auto">
        <h3 class="text-xs font-bold tracking-[0.2em] uppercase text-accent mb-3">Health Blog</h3>
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-primary">衛教專欄</h2>
      </div>
      
      <a 
        href="/blog" 
        class="hidden md:flex items-center gap-2 text-sm font-bold text-accent hover:text-primary transition-colors pb-2 border-b border-transparent hover:border-primary"
      >
        查看所有文章 <ArrowRight size={16} />
      </a>
    </div>

    {/* 文章列表 */}
    {recentPosts.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {recentPosts.map((post) => (
          // 🟢 4. 直接使用 BlogCard！
          // 所有的 Slug 修正、無圖片樣式、摘要邏輯通通都包在裡面了，不用重寫
          <BlogCard post={post} />
        ))}
      </div>
    ) : (
      // 若無文章顯示預設畫面
      <div class="text-center py-12 bg-bg/50 rounded-2xl border border-dashed border-gray-300">
        <p class="text-text/60">目前尚無最新文章，請至後台新增。</p>
        <a href="/keystatic" class="mt-4 inline-block px-6 py-2 bg-accent text-white rounded-full text-sm font-bold hover:bg-primary transition-colors">
          前往後台新增
        </a>
      </div>
    )}

    {/* 手機版查看更多按鈕 */}
    <div class="mt-12 text-center md:hidden">
      <a 
        href="/blog" 
        class="inline-block px-8 py-3 bg-white border border-primary/20 rounded-full text-primary font-bold shadow-sm hover:bg-bg transition-colors"
      >
        查看所有文章
      </a>
    </div>

  </div>
</section>