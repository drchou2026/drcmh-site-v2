---
import { Activity, Shield, Stethoscope, Heart, User, ArrowRight, CheckCircle2 } from 'lucide-react';

// 資料來源：主治項目_網站建置.docx
const services = [
  {
    title: "排尿困擾與攝護腺",
    subtitle: "告別頻尿夜尿，重拾順暢人生",
    icon: Activity, // 對應功能與活動力
    items: [
      "頻尿、夜尿、急尿",
      "排尿困難、尿流變細",
      "尿失禁、漏尿",
      "攝護腺肥大治療",
      "攝護腺炎"
    ]
  },
  {
    title: "私密健康與性傳染病",
    subtitle: "隱私精準檢測，守護親密關係",
    icon: Shield, // 對應防護與安全
    items: [
      "私密處贅生物 (菜花)",
      "性病篩檢與治療",
      "HIV 預防性投藥 (PrEP/PEP)",
      "HPV / 帶狀皰疹疫苗",
      "包皮手術 (包皮槍/雷射)"
    ]
  },
  {
    title: "微創治療與手術",
    subtitle: "先進技術導入，傷口小恢復快",
    icon: Stethoscope, // 對應專業手術
    items: [
      "攝護腺拉提手術 (UroLift)",
      "攝護腺水蒸氣消融 (Rezūm)",
      "攝護腺雷射手術",
      "尿失禁微創手術",
      "微創雷射結紮 (舒眠麻醉)"
    ]
  },
  {
    title: "男性性功能與荷爾蒙",
    subtitle: "重振雄風，找回男性的自信",
    icon: Heart, // 對應心血管與活力
    items: [
      "勃起功能障礙治療",
      "早洩、射精控制困擾",
      "男性更年期評估",
      "男性不孕症諮詢",
      "低能量震波治療"
    ]
  },
  {
    title: "一般泌尿疾病",
    subtitle: "常見問題評估，專業細心診治",
    icon: User, // 對應一般身體照護
    items: [
      "泌尿道感染",
      "尿路結石",
      "血尿評估",
      "疝氣修補",
      "陰囊水腫 / 精索靜脈曲張"
    ]
  }
];
---

<section id="expertise" class="py-24 bg-surface relative overflow-hidden">
  
  {/* 背景裝飾：右側淡色圓形 */}
  <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-highlight/30 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 pointer-events-none"></div>

  <div class="container mx-auto px-6 relative z-10">
    
    {/* 標題區塊 */}
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h3 class="text-xs font-bold tracking-[0.2em] uppercase text-accent mb-3">EXPERTISE</h3>
      <h2 class="text-3xl md:text-4xl font-serif font-bold text-primary mb-6">主治項目</h2>
      <p class="text-text/80 leading-relaxed">
        快速對照您的症狀與需求，了解我們如何提供專業診斷與個人化治療方案。<br class="hidden md:block" />
        無論是微創手術或私密困擾，周醫師都將為您提供最適合的建議。
      </p>
    </div>

    {/* 卡片網格區塊 */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      
      {services.map((service, index) => (
        <div class="group relative bg-bg rounded-2xl p-8 border border-transparent hover:border-accent/20 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          
          {/* Icon */}
          <div class="w-14 h-14 rounded-xl bg-highlight flex items-center justify-center text-primary mb-6 group-hover:bg-accent group-hover:text-white transition-colors duration-300">
            <service.icon size={28} className="transition-transform duration-300 group-hover:scale-110" />
          </div>

          {/* Title */}
          <h3 class="text-xl font-bold text-primary mb-2 group-hover:text-accent transition-colors">
            {service.title}
          </h3>
          <p class="text-xs text-text/60 font-medium mb-6 tracking-wide">
            {service.subtitle}
          </p>

          {/* List Items */}
          <ul class="space-y-3">
            {service.items.map(item => (
              <li class="flex items-start gap-3 text-sm text-text group-hover:text-primary transition-colors">
                <CheckCircle2 size={16} className="mt-0.5 text-accent/60 group-hover:text-accent shrink-0" />
                <span>{item}</span>
              </li>
            ))}
          </ul>

        </div>
      ))}

      {/* 第 6 張卡片：Call to Action */}
      <div class="relative bg-primary rounded-2xl p-8 flex flex-col justify-center items-center text-center overflow-hidden shadow-2xl group">
        
        {/* 動態背景裝飾 */}
        <div class="absolute inset-0 bg-accent/10 translate-y-full group-hover:translate-y-0 transition-transform duration-500 ease-in-out"></div>
        <div class="absolute -top-12 -right-12 w-32 h-32 bg-accent/20 rounded-full blur-2xl"></div>

        <div class="relative z-10">
          <h3 class="text-2xl font-serif font-bold text-white mb-4">
            不確定自己的症狀？
          </h3>
          <p class="text-gray-300 text-sm mb-8 leading-relaxed">
            網路資訊紛雜，與其自行猜測擔憂，<br/>
            不如來到診間，讓我為您進行詳細的評估與解說。
          </p>
          
          <a 
            href="/#clinic" 
            class="inline-flex items-center gap-2 px-8 py-3 bg-accent text-white font-bold rounded-full hover:bg-white hover:text-primary transition-all shadow-lg active:scale-95"
          >
            <span>預約諮詢</span>
            <ArrowRight size={18} className="group-hover:translate-x-1 transition-transform" />
          </a>
        </div>
      </div>

    </div>
  </div>
</section>