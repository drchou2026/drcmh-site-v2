---
import { getCollection, render } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';

// 1. 生成靜態路徑 (Static Paths)
export async function getStaticPaths() {
  const posts = await getCollection('news');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
// 2. 渲染內文 (Astro 5.0+ 使用 render 函式)
const { Content } = await render(post);

// 3. 取得最新 3 則消息 (不包含目前這篇)
const allNews = await getCollection('news');
const latestNews = allNews
  .filter(n => n.id !== post.id)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);

function formatDate(date: Date) {
  return new Date(date).toLocaleDateString('zh-TW', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}

// 分類樣式對照表
const categoryStyles: Record<string, { label: string; class: string }> = {
  announcement: { label: '診所公告', class: 'bg-green-50 text-green-600 border-green-100' },
  closed: { label: '停診通知', class: 'bg-red-50 text-red-600 border-red-100' },
  activity: { label: '活動快訊', class: 'bg-amber-50 text-amber-600 border-amber-100' },
};

const currentCat = categoryStyles[post.data.category] || { label: '公告', class: 'bg-blue-50 text-blue-600 border-blue-100' };
---

<Layout title={`${post.data.title} | 最新消息`}>
  
  <article class="min-h-screen bg-white">
    {/* Page Header / Hero Section */}
    <section class="relative pt-16 pb-12 bg-bg overflow-hidden">
      {/* 裝飾背景 */}
      <div class="absolute top-0 right-0 w-1/3 h-full bg-highlight-blue/40 -skew-x-12 translate-x-20 z-0 pointer-events-none"></div>
      
      <div class="container mx-auto px-6 relative z-10">
        {/* 麵包屑 */}
        <nav class="mb-8 text-sm flex items-center gap-2 text-gray-400" data-pagefind-ignore>
          <a href="/" class="hover:text-primary transition-colors">首頁</a>
          <i class="fa-solid fa-chevron-right text-[10px]"></i>
          <a href="/news" class="hover:text-primary transition-colors">最新消息</a>
          <i class="fa-solid fa-chevron-right text-[10px]"></i>
          <span class="text-gray-600 truncate max-w-[150px] md:max-w-none">{post.data.title}</span>
        </nav>

        <div class="max-w-3xl mx-auto text-center">
          <div class={`inline-block px-4 py-1.5 rounded-full border text-sm font-bold mb-6 shadow-sm ${currentCat.class}`}>
            {currentCat.label}
          </div>
          <h1 class="text-3xl md:text-5xl font-serif font-bold text-gray-900 mb-6 leading-tight" data-pagefind-body data-pagefind-weight="10">
            {post.data.title}
          </h1>
          <div class="flex items-center justify-center gap-4 text-gray-500 font-medium h-6">
            <time class="flex items-center gap-2">
              <i class="fa-regular fa-calendar-check text-primary"></i>
              {formatDate(post.data.date)}
            </time>
          </div>
        </div>
      </div>
    </section>

    <div class="container mx-auto px-6 max-w-3xl py-12" data-pagefind-body>
      {/* 封面圖 */}
      {post.data.coverImage && (
        <div class="mb-12 rounded-3xl overflow-hidden shadow-2xl aspect-[16/9] relative border-4 border-white">
          <Image 
            src={post.data.coverImage} 
            alt={post.data.title}
            class="w-full h-full object-cover"
            priority
          />
        </div>
      )}

      {/* 內文區塊 */}
      <div class="prose prose-lg prose-slate max-w-none prose-headings:text-primary prose-a:text-primary prose-a:no-underline hover:prose-a:underline prose-img:rounded-2xl prose-img:shadow-xl">
        <Content />
      </div>

      {/* 底部功能與分享 */}
      <div class="mt-20 pt-10 border-t border-gray-100 flex flex-col md:flex-row items-center justify-between gap-6" data-pagefind-ignore>
        <a href="/news" class="group flex items-center gap-2 text-gray-500 font-bold hover:text-primary transition-colors">
          <div class="w-10 h-10 rounded-full bg-gray-50 flex items-center justify-center group-hover:bg-primary/10 transition-colors">
            <i class="fa-solid fa-arrow-left group-hover:-translate-x-1 transition-transform"></i>
          </div>
          返回消息列表
        </a>
        
        <div class="flex items-center gap-4">
           <span class="text-sm text-gray-400 font-medium">分享此消息：</span>
           <button class="w-10 h-10 rounded-full bg-gray-50 text-gray-400 hover:bg-[#06C755] hover:text-white transition-all">
             <i class="fa-brands fa-line text-lg"></i>
           </button>
           <button class="w-10 h-10 rounded-full bg-gray-50 text-gray-400 hover:bg-[#1877F2] hover:text-white transition-all">
             <i class="fa-brands fa-facebook text-lg"></i>
           </button>
        </div>
      </div>
    </div>
  </article>

  {/* 最新消息推薦區 */}
  {latestNews.length > 0 && (
    <section class="py-20 bg-bg" data-pagefind-ignore>
      <div class="container mx-auto px-6">
        <div class="flex items-end justify-between mb-10">
          <div>
            <h2 class="text-2xl font-serif font-bold text-primary mb-2">更多最新消息</h2>
            <div class="w-12 h-1 bg-accent rounded-full"></div>
          </div>
          <a href="/news" class="text-sm font-bold text-gray-500 hover:text-primary flex items-center gap-1 transition-colors">
            查看更多 <i class="fa-solid fa-chevron-right text-[10px]"></i>
          </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {latestNews.map((item) => (
            <a href={`/news/${item.id}`} class="group bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-xl hover:border-primary/20 transition-all duration-300">
              <div class="flex flex-col gap-4">
                <div class="flex items-center gap-3">
                  <span class={`px-2 py-0.5 rounded text-[10px] font-bold border ${categoryStyles[item.data.category]?.class || ''}`}>
                    {categoryStyles[item.data.category]?.label || '公告'}
                  </span>
                  <span class="text-[10px] text-gray-400 font-medium">{formatDate(item.data.date)}</span>
                </div>
                <h3 class="font-bold text-gray-800 leading-snug line-clamp-2 group-hover:text-primary transition-colors">
                  {item.data.title}
                </h3>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}
</Layout>
